<div class="woodbine-product-list">
<% @products.each do |product| %>
     <div class="product-select">
    <%= image_tag product.image_url.to_s, class: "results-image" %>
    <div class="product-select-info">
    <h4><%= product.name %></h4>
    <p><%= product.product_description %></p>
  </div>
  <%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %>
  <%= link_to 'Select', product, class: 'btn btn-success' %>
  <%= link_to 'Delete', product, method: :delete, data: {confirm: "Are you sure you want to delete this product?"}, class: "btn btn-danger" %>
</div>
<% end %>
<%= will_paginate @products %>
</div>





     

