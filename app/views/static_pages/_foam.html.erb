<div class="acc-container">
  <div class="accordion" id="accordion2">
    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree">Foam Soaps</a>
      </div>
      <div id="collapseThree" class="accordion-body collapse in">
        <div class="accordion-inner">
          <% @product_s.where(:category => "Foam Soaps").find_each do |product| %>
            <h4><%= product.name %><br></h4>
            <%= link_to 'View Product MSDS', product.doc.url, class: 'btn btn-success', target: "_blank" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
    

